{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CUDOS MARKETS PLATFORM DEV in docker",
            "command": "cd ./docker/dev && docker-compose --env-file ./compose.arg -f ./compose.yml -p cudos-markets-platform-dev up --build",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Destroy CUDOS MARKETS PLATFORM DEV in docker",
            "command": "cd ./docker/dev && docker-compose --env-file ./compose.arg -f ./compose.yml -p cudos-markets-platform-dev down",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Build CUDOS MARKETS PLATFORM PROD in docker",
            "command": "cd ./docker/prod && docker-compose --env-file ./compose.arg -f ./compose.yml -p cudos-markets-platform-prod up --build",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Destroy CUDOS MARKETS PLATFORM PROD in docker",
            "command": "cd ./docker/prod && docker-compose --env-file ./compose.arg -f ./compose.yml -p cudos-markets-platform-prod down",
            "type": "shell",
            "group": "build"
        },
    ]
}
